{% block product %}
    <div class='product m-3' style='{{ "background-image: url(" ~ asset("images/products/" ~ product.imageUrl) ~ ")" }}'
         id="{{ product.id }}">
        <div class="title pull-left">
            {{ product.name }}
        </div>
        <button onClick="putProductToCart('{{ url('put_product_to_cart', {productId: product.id}) }}');" class="add-to-cart pull-right">
            <span>{{ product.price }}$/{{ product.price }}â‚¬</span>
        </button>
    </div>
{% endblock %}