{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-container">
        {{ form_start(orderForm, {'action': url('save_order')}) }}
        <div class="text-danger">
            {{ form_errors(orderForm) }}
        </div>

        <div class="form-group">
            <div class="row">
                {{ form_row(orderForm.name) }}
            </div>
            <div class="row">
                {{ form_row(orderForm.surname) }}
            </div>
            <div class="row">
                {{ form_row(orderForm.address) }}
            </div>
            <div class="row">
                {{ form_row(orderForm.phone) }}
            </div>
            {{ form_row(orderForm.submit) }}
        </div>
        {{ form_end(orderForm) }}

        <span>We need notify You that delivery cost is {{ 5.0|format_currency('EUR') }}/{{ 5.0|price('USD')|format_currency('USD') }}</span>
    </div>
{% endblock %}
